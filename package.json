{
  "name": "project-template",
  "description": "",
  "version": "0.0.1",
  "author": "Antoine Caron <antoine@crn-tech.fr>",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "validate": "npm run lint && npm run build && npm run test",
    "test": "npm run test:unit && npm run test:mutation",
    "test:cov": "npm run test:unit:cov",
    "test:unit": "jest --config ./test/jest-unit.js",
    "test:unit:cov": "npm run test:unit -- --coverage",
    "test:mutation": "stryker run"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "luxon": "^3.6.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@stryker-mutator/typescript-checker": "^8.7.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
